<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaAPOD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/space_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!--colors for views-->
        <item name="chipStyle">@style/space_chip_style</item>
        <item name="bottomAppBarStyle">@style/bottomAppBarSpaceAlt</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NasaAPOD_alternative" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_alt</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!--colors for views-->
        <item name="chipStyle">@style/space_chip_style_alternative</item>
        <item name="bottomAppBarStyle">@style/bottomAppBarSpaceAlt</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/breamcatcher</item>
        <item name="android:fontFamily">@font/breamcatcher</item>

    </style>


</resources>